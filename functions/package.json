{
  "name": "functions",
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "recursive": true,
    "extension": [
      "ts",
      "js",
      "tsx"
    ]
  },
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --watchAll"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^0.24.0",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "node-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "firebase-functions-test": "^0.2.3",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^3.8.0"
  },
  "private": true
}
